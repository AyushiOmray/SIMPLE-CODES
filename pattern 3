#include <stdio.h>

int main()
{
    int i,j,k=1,m=17,l,s=0,a;
    
    for(i=4;i>0;i--){
        for(a=0;a<s;a++){
            printf(" ");
        }
        s+=2;
        
        for(j=1;j<=i;j++){
            printf("%d",k);
            k++;
            printf("*");
            
            
           if(j==i){
               if(i==4){
                  for(l=1;l<=i;l++){
                   printf("%d",m);
                   m++;
                   printf("*");
                   }
                 }
                 
                 if(i==3){
                     m=14;
                  for(l=1;l<=i;l++){
                   printf("%d",m);
                   m++;
                   printf("*");
                   }
                 }
                 
                 if(i==2){
                     m=12;
                  for(l=1;l<=i;l++){
                   printf("%d",m);
                   m++;
                   printf("*");
                   }
                 }
                 
                 if(i==1){
                     m=11;
                  for(l=1;l<=i;l++){
                   printf("%d",m);
                   m++;
                   printf("*");
                   }
                 }
                 
            }
           
         
        }
        printf("\n");
        
    }

    return 0;
}
